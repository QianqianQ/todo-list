[flake8]
# Set the maximum line length
max-line-length = 88

# Ignore specific errors or warnings
ignore =
    E203,
    E266,
    E501,
    W503,

# Exclude specific files or directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    node_modules,
    dist,
    build,
    *.pyc

# Set the maximum complexity for functions
max-complexity = 10

# Allow inline comments to start with '# noqa'
inline-quotes = single